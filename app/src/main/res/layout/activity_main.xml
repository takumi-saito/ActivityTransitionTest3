<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f9f1f1f1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Main"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:textColor="#565656"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="※動作確認は解像度がフルHDの端末のみ"
        android:textSize="17dp"
        android:id="@+id/textView_memo"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:focusableInTouchMode="true"
        android:textColor="#565656" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO TO Sub"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/light_gray"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="400dp"
        android:background="#ff2057"
        android:transitionName="light_gray"/>
    <ImageView
        android:id="@+id/gray"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="400dp"
        android:background="#ff00fb"
        android:transitionName="gray"/>
    <ImageView
        android:id="@+id/dark_gray"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="400dp"
        android:background="#ff3cfb"
        android:transitionName="dark_gray"/>
    <ImageView
        android:id="@+id/black"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="400dp"
        android:background="#ff78fb"
        android:transitionName="black"/>

</FrameLayout>
