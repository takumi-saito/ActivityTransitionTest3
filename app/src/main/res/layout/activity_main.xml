<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f9dddddd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Main"
        android:id="@+id/textView"
        android:layout_marginLeft="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO TO Sub"
        android:id="@+id/button"
        android:layout_marginLeft="130dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/light_gray"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="350dp"
        android:background="@drawable/light_gray"
        android:transitionName="light_gray"/>
    <ImageView
        android:id="@+id/gray"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="400dp"
        android:background="@drawable/gray"
        android:transitionName="gray"/>
    <ImageView
        android:id="@+id/dark_gray"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="450dp"
        android:background="@drawable/dark_gray"
        android:transitionName="dark_gray"/>

</FrameLayout>
